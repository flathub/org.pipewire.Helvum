{
    "app-id": "org.pipewire.Helvum",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm12"
    ],
    "command": "helvum",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--filesystem=xdg-run/pipewire-0"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm12/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm12/lib"
    },
    "modules": [
        {
            "name": "Helvum",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/pipewire/helvum/uploads/ab71dd1738aa59dd9139faa951c13ee8/helvum-0.3.4.tar.xz",
                    "sha256": "7674c4e5db621f73baa2172921ccff80ec8a86c74b1d2a3823a34e60ddcf43a6"
                }
            ]
        }
    ]
}
